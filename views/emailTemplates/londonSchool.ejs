<!DOCTYPE html>
<html>

<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }

    .header {
      background-color: #ffffff;
      padding: 20px;
      text-align: center;
    }

    .content {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .footer {
      background-color: #e9ecef;
      padding: 10px;
      text-align: center;
      font-size: 12px;
      color: #6c757d;
    }

    .image-container {
      text-align: center;
      margin: 20px 0;
    }

    .image-container {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
    }

    h3 {
      color: #333;
    }

    ul {
      padding-left: 20px;
    }

    p,
    li {
      font-size: 14px;
      color: #333;
      line-height: 1.6;
    }

    a {
      color: #007bff;
      text-decoration: none;
    }

    .button {
      display: inline-block;
      padding: 10px 20px;
      font-size: 16px;
      color: #ffffff;
      background-color: #007bff;
      text-align: center;
      text-decoration: none;
      border-radius: 4px;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <!-- Letterhead Image -->
  <div class="header">
    <div class="image-container">
      <img src="<%= letterheadImage %>" alt="Company Letterhead">
    </div>
  </div>

  <div class="content">
    <!-- Personalized Greeting Line -->
    <p>Dear <%= name %>,</p>

    <!-- Subject Heading -->
    <h2>
      <%= subjectHeading %>
    </h2>

    <!-- Dynamic Paragraphs and Images -->
    <p>
      <%- introParagraph %>
    </p>

    <!-- First Image -->
    <div class="image-container">
      <img src="<%= firstImage %>" alt="Image 1">
    </div>

    <!-- About The Dubai Leadership Summit -->
    <h3>
      <%- aboutHeading %>
    </h3>
    <p>
      <%- aboutParagraph %>
    </p>

    <!-- Second Image -->
    <div class="image-container">
      <img src="<%= secondImage %>" alt="Image 2">
    </div>

    <!-- Why Are We Inviting You? -->
    <h3>
      <%- invitationHeading %>
    </h3>
    <p>
      <%- invitationParagraph %>
    </p>

    <!-- Details of the Summit -->
    <h3>
      <%- detailsHeading %>
    </h3>
    <ul>
      <% if (detailsList && detailsList.length) { %>
        <% detailsList.forEach(detail=> { %>
          <li>
            <%- detail %>
          </li>
          <% }); %>
            <% } else { %>
              <li>No details available at the moment.</li>
              <% } %>
    </ul>

    <!-- Key Topics Section -->
    <h3>
      <%= keyTopicsHeading %>
    </h3>
    <ol>
      <% keyTopicsList.forEach((topic, index)=> { %>
        <li>
          <%= topic %>
        </li>
        <% }); %>
    </ol>
    <div class="image-container">
      <img src="<%= keyTopicsImage %>" alt="Key Topics Image">
    </div>



    <!-- Master Class Section -->
    <h3>
      <%= masterClassHeading %>
    </h3>
    <p>
      <%- masterClassParagraph %>
    </p>

    <!-- Global Presence -->
    <h3>
      <%= weAreInHeading %>
    </h3>
    <p>
      <%- weAreInParagraph %>
    </p>

    <!-- Honorary Doctorate Nomination -->
    <h3>
      <%= nominationHeading %>
    </h3>
    <p>
      <%- nominationParagraph %>
    </p>

    <!-- Other Costs -->
    <h3>
      <%= otherCostsHeading %>
    </h3>
    <ul>
      <% if (otherCostsList && otherCostsList.length) { %>
        <% otherCostsList.forEach(cost=> { %>
          <li>
            <%- cost %>
          </li>
          <% }); %>
            <% } else { %>
              <li>No additional costs available at the moment.</li>
              <% } %>
    </ul>

    <!-- Payment Information -->
    <h3>
      <%= paymentInfoHeading %>
    </h3>
    <p>
      <%- paymentInfoParagraph %>
    </p>
    <ul>
      <% if (paymentDetails && paymentDetails.length) { %>
        <% paymentDetails.forEach(payment=> { %>

          <strong>Type:</strong>
          <%= payment.type %><br>
            <strong>Bank Name:</strong>
            <%= payment.bankName %><br>
              <strong>SWIFT Code:</strong>
              <%= payment.swiftCode %><br>
                <strong>Routing Number:</strong>
                <%= payment.routingNumber %><br>
                  <strong>Beneficiary Name:</strong>
                  <%= payment.beneficiaryName %><br>
                    <strong>Beneficiary Account:</strong>
                    <%= payment.beneficiaryAccount %>

                      <% }); %>
                        <% } %>
    </ul>

    <!-- Third-Party Payment Info -->
    <p><%- thirdPartyPaymentInfo %></p>

    <!-- Distance Learning Info -->
    <p><%- distanceLearningInfo %></p>

    <!-- Endowment Info -->
    <p><%- endowmentInfo %></p>

    <!-- Enrollment Information -->
    <p><%- enrolNowInfo %></p>

    <!-- Closing Line -->
    <p>
      <%= closingLine %>
    </p>

    <!-- Closing Line -->
    <p>
      <%= closingLine %>
    </p>


    <img src="<%= signatureImage %>" alt="Signature"><br>


    <!-- Signatory Line -->

    <%= SignName %>
  </div>

  <!-- Footer Image -->
  <div class="footer">
    <div class="image-container">
      <img src="<%= footerImage %>" alt="Footer">
    </div>
    <!-- Footer Text (This will render the unsubscribe link as HTML content) -->
    <p>If this email is not displaying correctly, <a href="<%= viewInBrowserLink %>" target="_blank">view it in your
        browser</a>.</p>
    <%- footerText %>
  </div>
</body>


</html>