<!DOCTYPE html>
<html>

<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }

    .header {
      background-color: #ffffff;
      padding: 20px;
      text-align: center;
    }

    .content {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .footer {
      background-color: #e9ecef;
      padding: 10px;
      text-align: center;
      font-size: 12px;
      color: #6c757d;
    }

    .image-container {
      text-align: center;
      margin: 20px 0;
    }

    .image-container {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
    }

    h3 {
      color: #333;
    }

    ul {
      padding-left: 20px;
    }

    p,
    li {
      font-size: 14px;
      color: #333;
      line-height: 1.6;
    }

    a {
      color: #007bff;
      text-decoration: none;
    }

    .button {
      display: inline-block;
      padding: 10px 20px;
      font-size: 16px;
      color: #ffffff;
      background-color: #007bff;
      text-align: center;
      text-decoration: none;
      border-radius: 4px;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <!-- Letterhead Image -->
  <div class="header">
    <div class="image-container">
      <img src="<%= letterheadImage %>" alt="Company Letterhead">
    </div>
  </div>

  <div class="content">
    <!-- Personalized Greeting Line -->
    <p>Dear <%= name %>,</p>

    <!-- Subject Heading -->
    <h2>
      <%= subjectHeading %>
    </h2>


    <!-- Dynamic Paragraphs and Images -->
    <p>
      <%- introParagraph %>
    </p>

    <!-- First Image -->
    <div class="image-container">
      <img src="<%= firstImage %>" alt="Image 1">
    </div>

    <!-- About The Dubai Leadership Summit -->
    <h3>
      <%- aboutHeading %>
    </h3>
    <p>
      <%- aboutParagraph %>
    </p>

    <!-- Second Image -->
    <div class="image-container">
      <img src="<%= secondImage %>" alt="Image 2">
    </div>

    <!-- Why Are We Inviting You? -->
    <h3>
      <%- invitationHeading %>
    </h3>
    <p>
      <%- invitationParagraph %>
    </p>

    <!-- Details of the Summit -->
    <h3>
      <%- detailsHeading %>
    </h3>
    <ul>
      <% if (detailsList && detailsList.length) { %>
        <% detailsList.forEach(detail=> { %>
          <li>
            <%- detail %>
          </li>
          <% }); %>
            <% } else { %>
              <li>No details available at the moment.</li>
              <% } %>
    </ul>

    <!-- Further Dynamic Content -->
    <% if (additionalContent && additionalContent.length) { %>
      <% additionalContent.forEach(function(content) { %>
        <h3>
          <%= content.heading %>
        </h3>
        <p>
          <%- content.paragraph %>
        </p>
        <% if (content.image) { %>
          <div class="image-container">
            <img src="<%= content.image %>" alt="Related Image">
          </div>
          <% } %>
            <% }); %>
              <% } %>

                <!-- Closing Line -->
                <p>
                  <%= closingLine %>
                </p>
                <!-- Signature Image -->
                <!-- <div class="image-container"> -->

                  <img src="<%= signatureImage %>" alt="Signature"><br>
                <!-- </div> -->

                <!-- Signatory Line -->

                <%= SignName %>
  </div>

  <!-- Footer Image -->
  <div class="footer">
    <div class="image-containe">
      <img src="<%= footerImage %>" alt="Footer">
    </div>

    <!-- Footer Text (This will render the unsubscribe link as HTML content) -->
    <div class="footer">
      <p>If this email is not displaying correctly, <a href="<%= viewInBrowserLink %>" target="_blank">view it in your
          browser</a>.</p>
      <%- footerText %>
    </div>


  </div>
</body>

</html>